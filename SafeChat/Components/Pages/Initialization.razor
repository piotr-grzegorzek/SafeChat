@page "/"
@inject NavigationManager NavigationManager

<div class="form-container">
    <div class="form-group">
        <label for="ip">IP:</label>
        <input id="ip" type="text" @bind="ip" class="form-control" />

        <label for="port">Port:</label>
        <input id="port" type="number" @bind="port" class="form-control" />

        <div class="button-group">
            <button @onclick="StartClient" class="btn btn-primary">Client</button>
            <button @onclick="StartServer" class="btn btn-secondary">Server</button>
        </div>
    </div>
</div>

@code {
    string ip = "127.0.0.1";
    int port = 5000;

    void StartClient()
    {
        NavigationManager.NavigateTo($"/chat?role=client&ip={ip}&port={port}");
    }

    void StartServer()
    {
        NavigationManager.NavigateTo($"/chat?role=server&ip={ip}&port={port}");
    }
}
